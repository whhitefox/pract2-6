<Window x:Class="Практическая6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="5,0,5,0">
            <Label HorizontalAlignment="Center" Content="Добро пожаловать!" FontSize="18" />
            <Label Content="Логин" FontSize="18" />
            <TextBox x:Name="LoginTextBox" FontSize="18" />
            <Button x:Name="CreateButton" Content="Создать чат" FontSize="18" Margin="0,20,0,0" Click="CreateButton_Click" />
            <Button x:Name="ConnectButton" Content="Подключиться к чату" FontSize="18" Margin="0,10,0,20" Click="ConnectButton_Click" />
            <Label FontSize="18" Content="IP адрес чата" />
            <TextBox x:Name="IPTextBox" FontSize="18" />
        </StackPanel>
    </Grid>
</Window>
